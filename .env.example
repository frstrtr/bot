# Bot Configuration Example
# Copy this file to .env and fill in your actual values

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin User ID (your Telegram user ID)
ADMIN_ID=your_admin_user_id

# Database Configuration
DATABASE_PATH=messages.db

# Monitored Channels (comma-separated list of channel IDs)
# These are the channels the bot will monitor for spam
CHANNEL_IDS=-1001234567890,-1001234567891,-1001234567892

# Allowed Forward Channels (comma-separated list of channel IDs)  
# Messages forwarded from these channels will NOT trigger spam detection
ALLOWED_FORWARD_CHANNELS=-1001234567893,-1001234567894

# Spam Detection Configuration
SPAM_TRIGGERS=spam,scam,fake,bot,promotion,advertisement,click,link,money

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=bancop_BOT.log

# Performance Settings
MAX_CONNECTIONS=10
CONNECT_TIMEOUT=30
REQUEST_TIMEOUT=60

# Feature Flags
ENABLE_SPAM_DETECTION=true
ENABLE_BAN_LOGGING=true
ENABLE_TELEGRAM_LOGGING=false

# Telegram Logging (optional - for sending logs to a Telegram chat)
# TELEGRAM_LOG_CHAT_ID=your_log_chat_id
# TELEGRAM_LOG_TOKEN=your_log_bot_token
