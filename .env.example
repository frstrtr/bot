# Bot Configuration - .env.example
# Copy this file to .env and fill in your values

# ===== BOT CREDENTIALS =====
BOT_NAME=snumsbot
BOT_TOKEN=your_bot_token_here

# ===== ADMIN SETTINGS =====
ADMIN_USER_ID=44816530
SUPERADMIN_GROUP_ID=-1003352471003

# ===== ADMIN GROUP (for reports/bans) =====
ADMIN_GROUP_ID=-1002314700824
ADMIN_GROUP_NAME=Test Admin Group

# ===== TECHNOLOG GROUP (for logging) =====
TECHNOLOG_GROUP_ID=-1002341048201
TECHNOLOG_GROUP_NAME=Technolog Test Group

# ===== ADMIN GROUP THREAD IDs =====
ADMIN_REPORTS=1
ADMIN_AUTOREPORTS=6
ADMIN_AUTOBAN=4
ADMIN_MANBAN=14
ADMIN_SUSPICIOUS=10

# ===== TECHNOLOG GROUP THREAD IDs =====
TECHNO_LOGGING=1
TECHNO_ORIGINALS=13
TECHNO_UNHANDLED=7
TECHNO_RESTART=11
TECHNO_OUT=6011
TECHNO_IN=15
TECHNO_NAMES=5
TECHNO_ADMIN=9

# ===== SPAM TRIGGERS (comma-separated) =====
SPAM_TRIGGERS=url,email,phone_number,hashtag,mention,text_link,mention_name,cashtag,bot_command

# ===== MONITORED GROUPS (comma-separated IDs) =====
# These are the groups the bot monitors for spam
MONITORED_GROUPS=-1001902317320,-1001801708729,-1002071738080,-1001753683146,-1002140993856

# ===== MONITORED GROUP NAMES (comma-separated, same order as IDs) =====
MONITORED_GROUP_NAMES=technobot_log,Test public forum with topics,Test group 2071738080,Test group 1753683146,Test group 2140993856

# ===== ALLOWED FORWARD CHANNELS (JSON format) =====
# Channels from which forwarded messages are excluded from autoreport
ALLOWED_FORWARD_CHANNELS=[]

# ===== P2P SERVER =====
P2P_SERVER_URL=http://localhost:8081

# ===== ESTABLISHED USER DETECTION =====
# Skip missed join banner for users meeting these criteria:
# (messages >= MIN_MESSAGES AND first_msg_age >= FIRST_MSG_DAYS) OR marked as legit
ESTABLISHED_USER_MIN_MESSAGES=10
ESTABLISHED_USER_FIRST_MSG_DAYS=90

# ===== NEW ACCOUNT DETECTION =====
# User IDs above this threshold are flagged as very new accounts
HIGH_USER_ID_THRESHOLD=8400000000

# ===== NIGHT TIME DETECTION =====
# Hours during which messages are flagged as "night" (for spam detection)
# Uses local timezone (set via TZ env var). Default: 1-6 AM
NIGHT_START_HOUR=1
NIGHT_END_HOUR=6
